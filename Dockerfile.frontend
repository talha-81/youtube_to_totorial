# Frontend Dockerfile

FROM python:3.11-slim-bookworm

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PIP_NO_CACHE_DIR=1

WORKDIR /app

# Install only frontend dependencies
RUN pip install --no-cache-dir \
    streamlit==1.31.0 \
    requests==2.31.0

# Copy frontend code
COPY frontend/ ./frontend/

EXPOSE 8501

CMD ["python", "-m", "streamlit", "run", "frontend/streamlit_app.py", "--server.port=8501", "--server.address=0.0.0.0", "--server.headless=true"]